{% schema %}
{
  "name": "Cart Summary",
  "settings": []
}
{% endschema %}

<section class="cart-summary">
  <div class="container">
    {% if cart.item_count > 0 %}
      <h1>Shopping Cart</h1>
      
      <div class="cart-content">
        <div class="cart-items">
          <table class="cart-table">
            <thead>
              <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {% for item in cart.items %}
                <tr class="cart-item" data-key="{{ item.key }}">
                  <td class="item-details">
                    <img src="{{ item.image | image_url: width: 100 }}" alt="{{ item.title }}" class="item-image">
                    <div>
                      <a href="{{ item.product_url }}">{{ item.title }}</a>
                      {% if item.variant_title %}
                        <div class="variant-title">{{ item.variant_title }}</div>
                      {% endif %}
                    </div>
                  </td>
                  <td>{{ item.price | money }}</td>
                  <td>
                    <form method="post" action="/cart/change">
                      <input type="number" name="quantity" value="{{ item.quantity }}" min="1" class="quantity-input">
                      <input type="hidden" name="line" value="{{ forloop.index }}">
                    </form>
                  </td>
                  <td>{{ item.final_line_price | money }}</td>
                  <td>
                    <form method="post" action="/cart/change">
                      <input type="hidden" name="quantity" value="0">
                      <input type="hidden" name="line" value="{{ forloop.index }}">
                      <button type="submit" class="remove-item">&times;</button>
                    </form>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
        
        <div class="cart-summary-box">
          <h2>Order Summary</h2>
          
          <div class="summary-row">
            <span>Subtotal</span>
            <span>{{ cart.subtotal_price | money }}</span>
          </div>
          
          {% if cart.total_discounts > 0 %}
            <div class="summary-row discount">
              <span>Discount</span>
              <span>-{{ cart.total_discounts | money }}</span>
            </div>
          {% endif %}
          
          <div class="summary-row">
            <span>Shipping</span>
            <span>Calculated at checkout</span>
          </div>
          
          <div class="summary-row total">
            <span>Total</span>
            <span>{{ cart.total_price | money }}</span>
          </div>
          
          <div class="coupon-section">
            <form method="post" action="/cart/update">
              <input type="text" name="discount" placeholder="Enter coupon code" class="coupon-input">
              <button type="submit" class="btn btn-secondary">Apply</button>
            </form>
          </div>
          
          <a href="/checkout" class="btn btn-primary btn-large">Proceed to Checkout</a>
          <a href="/collections/sofas" class="btn btn-secondary btn-large">Continue Shopping</a>
        </div>
      </div>
    {% else %}
      <div class="empty-cart">
        <h1>Your Cart is Empty</h1>
        <p>Add some beautiful sofas to get started!</p>
        <a href="/collections/sofas" class="btn btn-primary">Start Shopping</a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .cart-summary {
    padding: 2rem 0;
    min-height: calc(100vh - 300px);
  }
  
  .cart-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .cart-table {
    width: 100%;
    border-collapse: collapse;
  }
  
  .cart-table thead {
    background-color: #f5f5f5;
    border-bottom: 2px solid #ddd;
  }
  
  .cart-table th {
    padding: 1rem;
    text-align: left;
    font-weight: 600;
  }
  
  .cart-table td {
    padding: 1rem;
    border-bottom: 1px solid #eee;
  }
  
  .item-details {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }
  
  .item-image {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 4px;
  }
  
  .variant-title {
    color: #999;
    font-size: 0.9rem;
  }
  
  .quantity-input {
    width: 60px;
    padding: 0.25rem 0.5rem;
  }
  
  .remove-item {
    background-color: #ff4444;
    color: white;
    border: none;
    border-radius: 4px;
    width: 32px;
    height: 32px;
    cursor: pointer;
    font-size: 1.5rem;
    transition: background-color 0.3s;
  }
  
  .remove-item:hover {
    background-color: #cc0000;
  }
  
  .cart-summary-box {
    background-color: #f5f5f5;
    border-radius: 8px;
    padding: 1.5rem;
    height: fit-content;
  }
  
  .cart-summary-box h2 {
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #ddd;
  }
  
  .summary-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.75rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid #e0e0e0;
  }
  
  .summary-row.total {
    font-size: 1.2rem;
    font-weight: 600;
    color: {{ settings.color_primary }};
    border-top: 2px solid #ddd;
    border-bottom: none;
    padding-top: 1rem;
    margin-top: 1rem;
  }
  
  .coupon-section {
    display: flex;
    gap: 0.5rem;
    margin: 1.5rem 0;
  }
  
  .coupon-input {
    flex: 1;
  }
  
  .empty-cart {
    text-align: center;
    padding: 3rem;
  }
  
  @media (max-width: 768px) {
    .cart-content {
      grid-template-columns: 1fr;
    }
    
    .cart-table {
      font-size: 0.9rem;
    }
    
    .item-image {
      width: 60px;
      height: 60px;
    }
  }
</style>
