{% schema %}
{
  "name": "Sale Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "On Sale Now"
    },
    {
      "type": "collection",
      "id": "sale_collection",
      "label": "Sale Collection"
    },
    {
      "type": "range",
      "id": "products_count",
      "min": 3,
      "max": 12,
      "label": "Number of Products",
      "default": 6
    }
  ]
}
{% endschema %}

{% if section.settings.sale_collection %}
<section class="sale-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">{{ section.settings.title }}</h2>
      <a href="{{ section.settings.sale_collection.url }}" class="view-all-link">View All Sale Items</a>
    </div>
    
    <div class="products-grid">
      {% assign sale_collection_handle = section.settings.sale_collection %}
      {% if sale_collection_handle != blank %}
        {% assign sale_collection = collections[sale_collection_handle] %}
        {% if sale_collection %}
          {% for product in sale_collection.products limit: section.settings.products_count %}
            {% render 'product-card', product: product %}
          {% endfor %}
        {% endif %}
      {% endif %}
    </div>
  </div>
</section>

<style>
  .sale-section {
    padding: 4rem 0;
    background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
  }
  
  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #2c3e50;
    margin: 0;
  }
  
  .view-all-link {
    color: {{ settings.color_primary }};
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: color 0.3s;
  }
  
  .view-all-link:hover {
    color: {{ settings.color_secondary }};
    text-decoration: underline;
  }
  
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }
  
  @media (max-width: 768px) {
    .sale-section {
      padding: 2.5rem 0;
    }
    
    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .products-grid {
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
      gap: 1.5rem;
    }
  }
</style>
{% endif %}
