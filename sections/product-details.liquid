{% schema %}
{
  "name": "Product Details",
  "settings": [
    {
      "type": "text",
      "id": "stock_status",
      "label": "Default Stock Status",
      "default": "In Stock",
      "info": "Can be overridden per product using metafields"
    }
  ]
}
{% endschema %}

<section class="product-details">
  <div class="container">
    <div class="product-grid">
      <div class="product-images">
        <div class="main-image">
          {% if product.featured_image %}
            <img src="{{ product.featured_image | image_url: width: 800 }}" alt="{{ product.title }}" id="MainImage">
          {% endif %}
        </div>
        <div class="thumbnail-images">
          {% for image in product.images %}
            <img src="{{ image | image_url: width: 100 }}" alt="{{ product.title }}" class="thumbnail {% if forloop.first %}active{% endif %}" data-image="{{ image | image_url: width: 800 }}">
          {% endfor %}
        </div>
      </div>
      
      <div class="product-info">
        <h1 class="product-title">{{ product.title }}</h1>
        
        <div class="product-rating">
          <div class="stars">
            {% for i in (1..5) %}
              <span class="star {% if i <= 4 %}filled{% endif %}">★</span>
            {% endfor %}
          </div>
          <span class="rating-text">(42 reviews)</span>
        </div>
        
        <div class="product-price">
          <span class="price">{{ product.price | money }}</span>
          {% if product.compare_at_price %}
            <span class="original-price">{{ product.compare_at_price | money }}</span>
            <span class="discount-badge">Save {{ product.compare_at_price | minus: product.price | money }}</span>
          {% endif %}
        </div>
        
        {% assign stock_status = product.metafields.custom.stock_status | default: section.settings.stock_status | default: "In Stock" %}
        <div class="stock-status stock-{{ stock_status | downcase | replace: ' ', '-' }}">
          <span class="stock-indicator"></span>
          <span class="stock-text">{{ stock_status }}</span>
        </div>
        
        <div class="product-description">
          {{ product.description }}
        </div>
        
        <form method="post" action="/cart/add" class="product-form" id="product-form">
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" id="variant-id">
          
          <div class="product-options">
            {% for option in product.options_with_values %}
              <div class="option">
                <label for="Option-{{ forloop.index }}">{{ option.name }}</label>
                <select name="options[{{ option.name }}]" id="Option-{{ forloop.index }}" class="variant-selector" required>
                  {% for value in option.values %}
                    <option value="{{ value }}" {% if option.selected_value == value %}selected{% endif %}>{{ value }}</option>
                  {% endfor %}
                </select>
              </div>
            {% endfor %}
          </div>
          
          <div class="quantity-selector">
            <label for="Quantity">Quantity</label>
            <div class="quantity-controls">
              <button type="button" class="qty-btn qty-minus" aria-label="Decrease quantity">-</button>
              <input type="number" name="quantity" id="Quantity" value="1" min="1" max="10">
              <button type="button" class="qty-btn qty-plus" aria-label="Increase quantity">+</button>
            </div>
          </div>
          
          <div class="product-actions">
            <button type="submit" class="btn btn-primary btn-large" name="add">Add to Cart</button>
            <button type="button" class="btn btn-secondary btn-large" id="buy-now-btn">Buy Now</button>
          </div>
        </form>
        
        <div class="share-section">
          <span class="share-label">Share:</span>
          <div class="share-buttons">
            <a href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ product.url }}" target="_blank" class="share-btn facebook" aria-label="Share on Facebook">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
              </svg>
            </a>
            <a href="https://twitter.com/intent/tweet?url={{ shop.url }}{{ product.url }}&text={{ product.title }}" target="_blank" class="share-btn twitter" aria-label="Share on Twitter">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
              </svg>
            </a>
            <a href="https://wa.me/?text={{ product.title }}%20{{ shop.url }}{{ product.url }}" target="_blank" class="share-btn whatsapp" aria-label="Share on WhatsApp">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
              </svg>
            </a>
            <button class="share-btn copy-link" onclick="copyProductLink()" aria-label="Copy link">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
              </svg>
            </button>
          </div>
        </div>
        
        <div class="product-details-tabs">
          <div class="tab-header">
            <button class="tab-button active" data-tab="specs">Specifications</button>
            <button class="tab-button" data-tab="shipping">Shipping Info</button>
            <button class="tab-button" data-tab="care">Care Instructions</button>
          </div>
          
          <div id="specs" class="tab-content active">
            <h3>Product Specifications</h3>
            <ul>
              <li>Material: Premium Leather/Fabric</li>
              <li>Dimensions: Customizable</li>
              <li>Color Options: Multiple</li>
              <li>Warranty: 5 Years</li>
            </ul>
          </div>
          
          <div id="shipping" class="tab-content">
            <h3>Shipping Information</h3>
            <p>Free shipping on orders over £500. Delivery within 2-4 weeks. We deliver and assemble.</p>
          </div>
          
          <div id="care" class="tab-content">
            <h3>Care Instructions</h3>
            <p>Regular vacuuming and spot cleaning recommended. Professional cleaning annually.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .product-details {
    padding: 3rem 0;
  }
  
  .product-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }
  
  .product-images {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .main-image {
    width: 100%;
    border-radius: 12px;
    overflow: hidden;
    background: #f8f9fa;
  }
  
  .main-image img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .thumbnail-images {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }
  
  .thumbnail {
    width: 80px;
    height: 80px;
    border: 3px solid #e8e8e8;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s;
    object-fit: cover;
  }
  
  .thumbnail:hover,
  .thumbnail.active {
    border-color: {{ settings.color_primary }};
    transform: scale(1.05);
  }
  
  .product-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #2c3e50;
    font-weight: 700;
  }
  
  .product-rating {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }
  
  .stars {
    color: #ffc107;
    font-size: 1.2rem;
  }
  
  .rating-text {
    color: #666;
    font-size: 0.95rem;
  }
  
  .product-price {
    font-size: 2rem;
    color: {{ settings.color_primary }};
    margin-bottom: 1.5rem;
    display: flex;
    align-items: baseline;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .price {
    font-weight: 700;
  }
  
  .original-price {
    text-decoration: line-through;
    color: #999;
    font-size: 1.5rem;
    font-weight: 500;
  }
  
  .discount-badge {
    background: #ff4444;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    font-size: 0.9rem;
    font-weight: 600;
  }
  
  .stock-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    font-weight: 600;
  }
  
  .stock-in-stock {
    background: #e8f5e9;
    color: #2e7d32;
  }
  
  .stock-low-stock {
    background: #fff3e0;
    color: #e65100;
  }
  
  .stock-no-stock {
    background: #ffebee;
    color: #c62828;
  }
  
  .stock-new-stock-coming-soon {
    background: #e3f2fd;
    color: #1565c0;
  }
  
  .stock-indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: currentColor;
  }
  
  .product-description {
    margin-bottom: 2rem;
    line-height: 1.8;
    color: #555;
  }
  
  .product-options {
    margin: 1.5rem 0;
  }
  
  .option {
    margin-bottom: 1.25rem;
  }
  
  .option label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #333;
  }
  
  .option select {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid #e8e8e8;
    border-radius: 8px;
    font-size: 1rem;
    background: white;
    cursor: pointer;
  }
  
  .quantity-selector {
    margin-bottom: 2rem;
  }
  
  .quantity-selector label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #333;
  }
  
  .quantity-controls {
    display: flex;
    align-items: center;
    gap: 0;
    width: fit-content;
    border: 2px solid #e8e8e8;
    border-radius: 8px;
    overflow: hidden;
  }
  
  .qty-btn {
    background: #f8f9fa;
    border: none;
    padding: 0.75rem 1rem;
    cursor: pointer;
    font-size: 1.2rem;
    font-weight: 600;
    color: #333;
    transition: background 0.2s;
  }
  
  .qty-btn:hover {
    background: #e8e8e8;
  }
  
  .quantity-selector input {
    width: 60px;
    padding: 0.75rem;
    border: none;
    text-align: center;
    font-size: 1rem;
    font-weight: 600;
  }
  
  .product-actions {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  .btn {
    flex: 1;
    padding: 1rem 2rem;
    font-size: 1.1rem;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }
  
  .btn-primary {
    background: linear-gradient(135deg, {{ settings.color_primary }} 0%, {{ settings.color_secondary }} 100%);
    color: white;
  }
  
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(139, 69, 19, 0.3);
  }
  
  .btn-secondary {
    background: #f8f9fa;
    color: #333;
    border: 2px solid #e8e8e8;
  }
  
  .btn-secondary:hover {
    background: #e8e8e8;
    border-color: #d0d0d0;
  }
  
  .share-section {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem 0;
    border-top: 1px solid #e8e8e8;
    border-bottom: 1px solid #e8e8e8;
    margin-bottom: 2rem;
  }
  
  .share-label {
    font-weight: 600;
    color: #666;
  }
  
  .share-buttons {
    display: flex;
    gap: 0.75rem;
  }
  
  .share-btn {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid #e8e8e8;
    background: white;
    color: #666;
    cursor: pointer;
    transition: all 0.3s;
    text-decoration: none;
  }
  
  .share-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  
  .share-btn.facebook:hover {
    background: #1877f2;
    color: white;
    border-color: #1877f2;
  }
  
  .share-btn.twitter:hover {
    background: #1da1f2;
    color: white;
    border-color: #1da1f2;
  }
  
  .share-btn.whatsapp:hover {
    background: #25d366;
    color: white;
    border-color: #25d366;
  }
  
  .share-btn.copy-link:hover {
    background: {{ settings.color_primary }};
    color: white;
    border-color: {{ settings.color_primary }};
  }
  
  .product-details-tabs {
    margin-top: 2rem;
  }
  
  .tab-header {
    display: flex;
    gap: 0;
    margin-bottom: 1.5rem;
    border-bottom: 2px solid #e8e8e8;
  }
  
  .tab-button {
    background: none;
    border: none;
    padding: 1rem 2rem;
    cursor: pointer;
    color: #666;
    font-weight: 600;
    font-size: 1rem;
    border-bottom: 3px solid transparent;
    margin-bottom: -2px;
    transition: all 0.3s;
  }
  
  .tab-button:hover {
    color: {{ settings.color_primary }};
  }
  
  .tab-button.active {
    color: {{ settings.color_primary }};
    border-bottom-color: {{ settings.color_primary }};
  }
  
  .tab-content {
    display: none;
    line-height: 1.8;
  }
  
  .tab-content.active {
    display: block;
  }
  
  .tab-content h3 {
    margin-bottom: 1rem;
    color: #2c3e50;
  }
  
  .tab-content ul {
    list-style: none;
    padding: 0;
  }
  
  .tab-content ul li {
    padding: 0.5rem 0;
    border-bottom: 1px solid #f0f0f0;
  }
  
  @media (max-width: 968px) {
    .product-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .product-title {
      font-size: 2rem;
    }
    
    .product-actions {
      flex-direction: column;
    }
  }
</style>

<script>
  // Tab functionality
  document.querySelectorAll('.tab-button').forEach(button => {
    button.addEventListener('click', function() {
      const tabName = this.dataset.tab;
      
      document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
      document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
      
      this.classList.add('active');
      document.getElementById(tabName).classList.add('active');
    });
  });
  
  // Image gallery
  document.querySelectorAll('.thumbnail').forEach(thumbnail => {
    thumbnail.addEventListener('click', function() {
      const mainImage = document.getElementById('MainImage');
      if (mainImage) {
        mainImage.src = this.dataset.image;
      }
      document.querySelectorAll('.thumbnail').forEach(t => t.classList.remove('active'));
      this.classList.add('active');
    });
  });
  
  // Quantity controls
  document.querySelector('.qty-minus')?.addEventListener('click', function() {
    const input = document.getElementById('Quantity');
    if (input && parseInt(input.value) > 1) {
      input.value = parseInt(input.value) - 1;
    }
  });
  
  document.querySelector('.qty-plus')?.addEventListener('click', function() {
    const input = document.getElementById('Quantity');
    if (input && parseInt(input.value) < parseInt(input.max || 10)) {
      input.value = parseInt(input.value) + 1;
    }
  });
  
  // Variant selection
  document.querySelectorAll('.variant-selector').forEach(select => {
    select.addEventListener('change', function() {
      // Update variant ID based on selected options
      // This is a simplified version - you may need to adjust based on your variant structure
      updateVariantId();
    });
  });
  
  function updateVariantId() {
    // This function should update the variant ID based on selected options
    // Implementation depends on your product variant structure
  }
  
  // Buy Now functionality
  document.getElementById('buy-now-btn')?.addEventListener('click', function() {
    const form = document.getElementById('product-form');
    if (form) {
      // Create a hidden input to indicate buy now
      const buyNowInput = document.createElement('input');
      buyNowInput.type = 'hidden';
      buyNowInput.name = 'return_to';
      buyNowInput.value = '/checkout';
      form.appendChild(buyNowInput);
      form.submit();
    }
  });
  
  // Copy product link
  function copyProductLink() {
    const url = window.location.href;
    navigator.clipboard.writeText(url).then(() => {
      alert('Product link copied to clipboard!');
    });
  }
</script>
