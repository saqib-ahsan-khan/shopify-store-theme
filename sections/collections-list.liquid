{% schema %}
{
  "name": "Collections List",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Page Title",
      "default": "Our Collections"
    }
  ]
}
{% endschema %}

<div class="collections-list-page">
  <div class="container">
    <h1 class="page-title">{{ section.settings.title }}</h1>
    
    <div class="collections-grid">
      {% assign sorted_collections = collections | sort: 'title' %}
      {% for collection in sorted_collections %}
        {% if collection.products_count > 0 %}
          <a href="{{ collection.url }}" class="collection-card">
            {% if collection.featured_image %}
              <div class="collection-image">
                <img src="{{ collection.featured_image | image_url: width: 600 }}" alt="{{ collection.title }}" loading="lazy">
              </div>
            {% else %}
              <div class="collection-image placeholder">
                <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                  <path d="M3 9h18M9 21V9"/>
                </svg>
              </div>
            {% endif %}
            <div class="collection-info">
              <h3 class="collection-title">{{ collection.title }}</h3>
              <p class="collection-count">{{ collection.products_count }} {{ collection.products_count | pluralize: 'product', 'products' }}</p>
              <span class="view-collection">View Collection â†’</span>
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .collections-list-page {
    padding: 3rem 0;
    min-height: 60vh;
  }
  
  .page-title {
    font-size: 3rem;
    font-weight: 700;
    color: #2c3e50;
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .collections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2.5rem;
  }
  
  .collection-card {
    text-decoration: none;
    border-radius: 12px;
    overflow: hidden;
    background: #ffffff;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    display: block;
  }
  
  .collection-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }
  
  .collection-image {
    width: 100%;
    height: 300px;
    overflow: hidden;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    position: relative;
  }
  
  .collection-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .collection-image.placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #adb5bd;
  }
  
  .collection-card:hover .collection-image img {
    transform: scale(1.1);
  }
  
  .collection-info {
    padding: 2rem;
    text-align: center;
  }
  
  .collection-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: #2c3e50;
    margin: 0 0 0.75rem 0;
  }
  
  .collection-count {
    color: #666;
    font-size: 1rem;
    margin: 0 0 1rem 0;
    font-weight: 500;
  }
  
  .view-collection {
    color: {{ settings.color_primary }};
    font-weight: 600;
    font-size: 1rem;
    transition: color 0.3s;
  }
  
  .collection-card:hover .view-collection {
    color: {{ settings.color_secondary }};
  }
  
  @media (max-width: 768px) {
    .collections-list-page {
      padding: 2rem 0;
    }
    
    .page-title {
      font-size: 2rem;
    }
    
    .collections-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .collection-image {
      height: 250px;
    }
  }
</style>
