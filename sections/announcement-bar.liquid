{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show Announcement Bar",
      "default": true
    }
  ]
}
{% endschema %}

{% if section.settings.show_announcement %}
<div class="announcement-bar">
  <div class="container">
    <div class="announcement-content">
      <span class="announcement-text">WE DELIVER</span>
      <span class="announcement-separator">•</span>
      <span class="announcement-text">WE ASSEMBLE</span>
      <span class="announcement-separator">•</span>
      <span class="announcement-text">CASH ON COLLECTION</span>
    </div>
  </div>
</div>

<style>
  .announcement-bar {
    background-color: #f8f9fa;
    border-bottom: 1px solid #e9ecef;
    padding: 0.5rem 0;
    font-size: 0.8125rem;
    font-weight: 500;
    text-align: center;
    position: relative;
    z-index: 1000;
    color: #495057;
  }
  
  .announcement-content {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .announcement-text {
    white-space: nowrap;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    font-size: 0.75rem;
  }
  
  .announcement-separator {
    color: #adb5bd;
    font-weight: 300;
  }
  
  @media (max-width: 768px) {
    .announcement-content {
      gap: 0.75rem;
      font-size: 0.7rem;
    }
    
    .announcement-text {
      font-size: 0.7rem;
    }
    
    .announcement-separator {
      display: none;
    }
    
    .announcement-content {
      flex-direction: column;
      gap: 0.25rem;
    }
  }
</style>
{% endif %}
