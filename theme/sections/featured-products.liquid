{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Sofas"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_count",
      "min": 3,
      "max": 12,
      "label": "Number of Products",
      "default": 6
    }
  ]
}
{% endschema %}

<section class="featured-products">
  <div class="container">
    <h2 class="section-title">{{ section.settings.title }}</h2>
    
    <div class="products-grid">
      {% if section.settings.collection %}
        {% for product in section.settings.collection.products limit: section.settings.products_count %}
          {% include 'product-card' %}
        {% endfor %}
      {% else %}
        {% for product in shop.products limit: section.settings.products_count %}
          {% include 'product-card' %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

<style>
  .featured-products {
    padding: 3rem 0;
  }
  
  .section-title {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 2rem;
    color: {{ settings.color_primary }};
  }
  
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  @media (max-width: 768px) {
    .products-grid {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 1rem;
    }
  }
</style>
