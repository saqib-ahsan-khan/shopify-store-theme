<div class="page-template">
  <div class="container">
    <h1 class="page-title">{{ page.title }}</h1>
    <div class="page-content">
      {{ page.content }}
      
      {% unless page.content != blank %}
        <p>Terms and conditions content will be added here.</p>
      {% endunless %}
    </div>
  </div>
</div>

<style>
  .page-template {
    padding: 3rem 0;
    min-height: 60vh;
  }
  
  .page-title {
    font-size: 3rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 2rem;
    text-align: center;
  }
  
  .page-content {
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.8;
    font-size: 1.1rem;
    color: #555;
  }
  
  .page-content h2 {
    color: #2c3e50;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .page-content p {
    margin-bottom: 1.5rem;
  }
  
  @media (max-width: 768px) {
    .page-template {
      padding: 2rem 0;
    }
    
    .page-title {
      font-size: 2rem;
    }
  }
</style>
